# .editorconfig - OBS Plugin Development (C++/Qt Style)
root = true

# -----------------------------------------------
# C++ / C / Header / Qt UI files
# -----------------------------------------------
[*.{c,cpp,h,hpp,cc,cxx,ui}]
charset = utf-8
indent_style = space
indent_size = 8
insert_final_newline = true
trim_trailing_whitespace = true

# -----------------------------------------------
# Naming Convention Rules (Visual Studio only)
# -----------------------------------------------

# class name -> PascalCase
dotnet_naming_rule.classes_should_be_pascalcase.symbols = classes
dotnet_naming_rule.classes_should_be_pascalcase.style = pascal_case
dotnet_naming_rule.classes_should_be_pascalcase.severity = suggestion
dotnet_naming_symbols.classes.applicable_kinds = class
dotnet_naming_style.pascal_case.capitalization = pascal_case

# method name -> camelCase
dotnet_naming_rule.methods_should_be_camelcase.symbols = methods
dotnet_naming_rule.methods_should_be_camelcase.style = camel_case
dotnet_naming_rule.methods_should_be_camelcase.severity = suggestion
dotnet_naming_symbols.methods.applicable_kinds = method
dotnet_naming_style.camel_case.capitalization = camel_case

# member variable -> camelCase_
dotnet_naming_rule.fields_should_end_with_underscore.symbols = fields
dotnet_naming_rule.fields_should_end_with_underscore.style = end_with_underscore
dotnet_naming_rule.fields_should_end_with_underscore.severity = suggestion
dotnet_naming_symbols.fields.applicable_kinds = field
dotnet_naming_style.end_with_underscore.capitalization = camel_case
dotnet_naming_style.end_with_underscore.required_suffix = _

# constant -> UPPER_SNAKE_CASE
dotnet_naming_rule.constants_should_be_uppercase.symbols = constants
dotnet_naming_rule.constants_should_be_uppercase.style = all_uppercase
dotnet_naming_rule.constants_should_be_uppercase.severity = suggestion
dotnet_naming_symbols.constants.applicable_kinds = field
dotnet_naming_style.all_uppercase.capitalization = all_upper

# -----------------------------------------------
# CMake files
# -----------------------------------------------
[*.{cmake,CMakeLists.txt}]
indent_style = space
indent_size = 2

# -----------------------------------------------
# .gitignore, .editorconfig, Markdown docs
# -----------------------------------------------
[*.{md,txt}]
indent_style = space
indent_size = 2

